@model IEnumerable<graduation_project.Models.Booking>

@{
    ViewBag.Title = "Index";
}


<table class="table table-responsive" >
    <tr>
        <th class="col">
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.Clinic.name)
        </th>
        <th class="col">
            @Html.DisplayName("الطبيب")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.active == true)
            {
                <span>تم تأكيد الحجز</span>
            }
            else if (item.active == false)
            { <span>تم رفض الحجز</span>
            }
            else
            { <span>قيد الانتظار</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Clinic.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.Person.name)
        </td>

        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.ID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
