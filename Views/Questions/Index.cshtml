@model IEnumerable<graduation_project.Models.Question>

@{
    ViewBag.Title = "الأسئلة";
     

}


<div class="col-xl-12 col-sm-6 mb-xl-0 mb-4 m col-md-12">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", "Questions", new { id = item.ID })"><div class="card m-2">

            <div class="card-body p-3">

                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-truncate"  style="max-width: 150px;">
                                @Html.DisplayFor(modelItem => item.title)
                            </p>
                            <h5 class="font-weight-bolder text-truncate"  style="max-width: 180px;">
                                @Html.DisplayFor(modelItem => item.question1)

                            </h5>
                            <p class="mb-0">
                                <span class="text-success text-sm font-weight-bolder">@item.date.ToShortDateString()</span>
                            </p>
                            <p>
                                @if (ViewBag.inAdmin)
                                {
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID },new { @class = "btn-danger btn" })}
                            </p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div></a>}
    </div>

