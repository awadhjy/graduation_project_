    <div class="collapse navbar-collapse px-0 w-auto " id="sidenav-collapse-main">
        <ul class="navbar-nav">
            @if (Session["isadmin"] != null)
            {
            <li class="nav-item">
                <a class="nav-link @if (TempData["control"] != null)
