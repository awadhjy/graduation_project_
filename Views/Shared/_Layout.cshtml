            <div class="container-fluid py-1 px-3">

                <div class="collapse navbar-collapse mt-sm-0 mt-2 px-0" id="navbar">

                    <ul class="navbar-nav me-auto ms-0 justify-content-end">
                        @if (Session["userID"] != null) { 
                            <li>
                                <span class="nav-link text-white font-weight-bold px-0">

                                    <span class="d-sm-inline d-none ps-2"> مرحباً </span>
                                    <span class="ps-4"> @Session["userName"] </span>
                                </span>
                            </li>}
                        <li class="nav-item d-flex align-items-center">
                            @if (Session["userID"] == null)
                            {
                    <a href="@Url.Action("Index", "login")" class="nav-link text-white font-weight-bold px-0">
                        <i class="fa fa-user me-sm-1"></i>
                        <span class="d-sm-inline d-none">تسجيل دخول</span>
                    </a> }
                else
                {
                    <a href="@Url.Action("logout", "login")" class="nav-link text-white font-weight-bold px-0">
                        <i class="fa fa-sign-out me-sm-1"></i>
                        <span class="d-sm-inline d-none">تسجيل خروج</span>
                    </a>}
                        </li>
                        <a href="javascript:;">
                            <li class="nav-item d-xl-none pe-3 d-flex align-items-center">
                                <a class="nav-link text-white p-0" id="iconNavbarSidenav">
                                    <div class="sidenav-toggler-inner">
                                        <i class="sidenav-toggler-line bg-white"></i>
                                        <i class="sidenav-toggler-line bg-white"></i>
                                        <i class="sidenav-toggler-line bg-white"></i>
                                    </div>
                                </a>
                            </li>
                        </a>
                        @if (Session["userID"] != null)
                        {
                    <li class="nav-item px-3 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-white p-0">
                            <i class="fa fa-cog fixed-plugin-button-nav cursor-pointer"></i>
                        </a>
                    </li> } 
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-4">

            <div class="row my-0">
                <div class="col-lg-12 col-md-12 mb-md-0 mb-4">
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <h6>@ViewBag.pageTitle</h6>

                                </div>
                                @if (TempData["btn1"] != null || TempData["btn2"] != null || TempData["btn3"] != null)
                                {<div class="col-6 my-auto text-start">
                                        <div class="dropdown float-start ps-4">
                                            <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v text-secondary"></i>
                                            </a>
                                            <ul class="dropdown-menu px-2 py-3 me-n4  " aria-labelledby="dropdownTable">
                                                @if (TempData["btn1"] != null)
                                                {
                                <li>
                                    @Html.ActionLink(TempData["btn1"].ToString().Split(',')[2], TempData["btn1"].ToString().Split(',')[1], new object { }, htmlAttributes: new { @class = "dropdown-item border-radius-md" })
                                </li>}
                                                @if (TempData["btn2"] != null)
                                                {
                                <li>
                                    @Html.ActionLink(TempData["btn2"].ToString().Split(',')[2], TempData["btn2"].ToString().Split(',')[1], new object { }, htmlAttributes: new { @class = "dropdown-item border-radius-md" })
                                </li>
}
                                                @if (TempData["btn3"] != null)
                                                {
                                <li>
                                    @Html.ActionLink(TempData["btn3"].ToString().Split(',')[2], TempData["btn3"].ToString().Split(',')[1], new object { }, htmlAttributes: new { @class = "dropdown-item border-radius-md" })
                                </li>}
